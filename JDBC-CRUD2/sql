CREATE TABLE GENDER(ID INT UNIQUE, NAME VARCHAR(90));
INSERT INTO GENDER VALUES(1,'MALE');
INSERT INTO GENDER VALUES(2,'FEMALE');


CREATE TABLE EDUCATION(ID INT UNIQUE, NAME VARCHAR(90));
INSERT INTO EDUCATION VALUES(1,'BE');
INSERT INTO EDUCATION VALUES(2,'MCA');
INSERT INTO EDUCATION VALUES(3,'MBA');


CREATE TABLE SKILL (ID INT UNIQUE, NAME VARCHAR(90));
INSERT INTO SKILL VALUES(1,'C');
INSERT INTO SKILL VALUES(2,'CPP');
INSERT INTO SKILL VALUES(3,'JAVA');

CREATE TABLE PERSON(ID INT UNIQUE, FIRST_NAME VARCHAR(90),AGE INT,GENDER_ID INT, EDUCATION_ID INT,
                           CONSTRAINTS PFK1 FOREIGN KEY(GENDER_ID) REFERENCES GENDER(ID),
                           CONSTRAINTS PFK2 FOREIGN KEY(EDUCATION_ID) REFERENCES EDUCATION(ID));

                           
CREATE TABLE ADDRESS (HOUSE_NO VARCHAR(90),
                      STREET_NAME VARCHAR(90),
                      PERSON_ID INT UNIQUE,
  CONSTRAINTS AFK1 FOREIGN KEY(PERSON_ID) REFERENCES PERSON(ID));
  
  DROP TABLE ADDRESS;
  
  CREATE TABLE PERSON_SKILL (PERSON_ID INT UNIQUE, SKILL_ID INT UNIQUE,
                              CONSTRAINTS PSFK1 FOREIGN KEY(PERSON_ID) REFERENCES PERSON(ID),
                              CONSTRAINTS PSFK2 FOREIGN KEY(SKILL_ID) REFERENCES SKILL(ID));


commit;